    <section>
    <h1>Ekstrakcja opinii</h1>
    <hr>
        <div class="row">
            <div class="col-12 text-center mt-3 mb-3">
                <form action="{{url_for('extract')}}" method="POST">
                    <div class="mb-3">
                        <label for="product_id" class="form-label">Podaj kod produktu z Ceneo.pl:</label>
                        <input type="text" class="form-control" id="product_id" name="product_id" placeholder="Kod produktu" maxlength="8"minlength="8" required>
