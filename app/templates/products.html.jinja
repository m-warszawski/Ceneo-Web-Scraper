    <div class="row">
        <ul class="list-group">
            {% for product in products_list %}
                <li class="list-group-item list-group-item-action">
                    <a href="{{url_for('product', product_id=product.product_id)}}" class="nav-link d-flex justify-content-between align-items-center">
                        <div style="color: #000;">
                            <i class="bi bi-door-open-fill pe-2"></i>
